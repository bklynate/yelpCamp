<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">
        yelpCamp
      </p>
      <div class="list-group">
        <li class="list-group-item active">dummy info 1</li>
        <li class="list-group-item">dummy info 2</li>
        <li class="list-group-item">dummy info 3</li>
      </div>
    </div>

    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= campground.image %>" alt="" />
        <div class="caption-full">
          <h4 class="pull-right">$40.00/night</h4>
          <h3><%= campground.name %></h3>
          <h6>
            <em>Submitted by <%= campground.author.username %></em>
          </h6>
          <p>
            <%= campground.description %>
          </p>
          <% if(currentUser.username === campground.author.username) {%>
            <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit Details</a>
          <% } %>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add new comment</a>
        </div>
        <hr>
        <% campground.comments.forEach(function(comment){ %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username %></strong>
              <span class="pull-right">10 days ago</span>
              <p>
                <%= comment.text %>
              </p>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>
